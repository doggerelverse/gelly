//================================================================================================
//  Actor Class
//
//
//
//
//================================================================================================
#ifndef _ACTOR_H_
#define _ACTOR_H
//================================================================================================
#include "graphics.h"
//================================================================================================
class Actor
{
public:
  //==============================================================================================
  Actor( char const * texpath=0 );
  //==============================================================================================
  void draw();
  void draw( Vertex const & npos ){ this->pos = npos; draw(); }
  //==============================================================================================
  //getpos overloaded function
  void     getpos( Vertex & cpos ){ cpos = this->pos; }
  void     getpos( float&x,float&y,float&z ){ x=this->pos[0]; y=this->pos[1]; z=this->pos[2]; }
  Vertex * getpos(){ return new Vertex(this->pos); }
  //==============================================================================================
  //setpos overloaded function
  void setpos(Vertex const & npos);
  void setpos(float x, float y, float z);
  //==============================================================================================
  // Returns a struct with
  DRAW_ITEM * getdrawitem();
  void selectdraw();
  //==============================================================================================
private:
  //==============================================================================================
  Vertel model;
  Vertel boundmodel;
  Vertex boundoffset;
  Vertex pos;
  unsigned int name;
  unsigned int texid;
  void * drawmode;
  void * offset;
  //==============================================================================================
};
//================================================================================================
#endif
